<h1>Instruments</h1>

<%= render 'search_form' %>

<div id="main-container" class="main-container">
  <div class="cards">
    <% @instruments.each do |instrument| %>
      <%= link_to instrument_path(instrument) do %>
        <div class="card-instrument">
          <%= image_tag(instrument.image_url) %>
          <div class="card-instrument-infos">
            <div>
              <h3>Brand: <%=instrument.brand%></h3>
              <h2>Model: <%=instrument.model%></h2>
              <p><%=instrument.category%></p>
              <p><%=instrument.city%></p>
              <p>Distance from you: <%=distance_from_user(instrument)%> Km</p>
            </div>
            <h3 class="card-instrument-pricing"><%=instrument.daily_price%></h3>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
