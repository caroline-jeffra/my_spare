<h1>Instruments</h1>

<%= render 'search_form' %>

<div id="main-container" class="main-container">
  <div class="cards">
    <% @instruments.each do |instrument| %>
      <%= link_to instrument_path(instrument) do %>
        <div class="card-instrument">
          <%= image_tag(instrument.image_url) %>
          <div class="card-instrument-infos">
            <div>
              <h3><%=instrument.category%></h3>
            </div>
            <div>
            <div>
              <h2>Distance from you: <%=distance_from_user(instrument)%> Km</h2>
            </div>
            <div class="card-instrument-pricing">
              <h3>â‚¬ <%=instrument.daily_price%></h3>
            </div>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
